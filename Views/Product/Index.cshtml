@model IEnumerable<sklep.Models.Product>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Img)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="~/images/product/@item.Img" 
                    asp-append-version="true" width="100px" /> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
            @if (item.Number > 0) {
                <a asp-controller="Cart" asp-action="AddToCart" 
                asp-route-idproduct="@item.Id">Buy</a>
                <mark>|</mark>
            }
            else {
                <mark>NiedostÄ™pny |</mark>
            }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            @if (User.IsInRole("admin")) {
                <mark>|</mark>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            }
            @if (User.IsInRole("admin")) {
                <mark>|</mark>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            }
            </td>
        </tr>
}
    </tbody>
</table>
